   209 				; proc name:  setup_vbxe_sprite_data
   210 				; purpose:    copy the sprite bin file data 
   211 				;             into MEMAC-A window memory 
   212 				;             take into account the MEMAC-A window size
   213 				;             you have defined and see if the sprite sheet
   214 				;             does not exceed that
   215 				;*********************************************************
   216 30A9			.proc setup_vbxe_sprite_data
   217 				    
   218 				    ; copy the sprite into the MEMAC-A VBXE address
   219 				    ; the offset needs to take into account the XDL
   220 				    ; and the blitter blocks so we set the address
   221 				    ; to be the MEMAC-A window address + $100 as offset
   222 				    ; $100 is enough as we only have 2 blitter blocks  
   223 				    ; that takes 2x21 = 42 bytes
   224 				    
   225 				    ; set the bin file hi byte address 
   226 				    ; into a ZP source variable
   227 30A9 A9 AA 85 B0 A9 31 +     mwa #sprite_data ZP_SRC 
   228
   229 				    ; set the MEMAC-A window + offset($100) address  
   230 				    ; into a ZP destination variable 
   231 30B1 A9 00		    lda #0
   232 30B3 85 B2		    sta ZP_DST 
   233 30B5 A9 91		    lda #>(VBXE_MEMC_WINDOW + $100)
   234 30B7 85 B3		    sta ZP_DST + 1
   235
   236 				    ; loop sprite height 
   237 30B9 A2 51		    ldx #SPRITE_HEIGHT
   238 30BB			copy_sprite_row_loop
   239 30BB A0 50		    ldy #SPRITE_HEIGHT-1
   240 30BD			copy_sprite_byte_loop
   241 30BD B1 B0		    lda (ZP_SRC),y
   242 30BF 91 B2		    sta (ZP_DST),y
   243 30C1 88			    dey
   244 30C2 10 F9		    bpl copy_sprite_byte_loop
   245 30C4 18			    clc
   246 30C5 A5 B0		    lda ZP_SRC
   247 30C7 69 1C		    adc #SPRITE_WIDTH
   248 30C9 85 B0		    sta ZP_SRC
   249 30CB A5 B1		    lda ZP_SRC + 1
   250 30CD 69 00		    adc #0
   251 30CF 85 B1		    sta ZP_SRC + 1
   252
   253 30D1 18			    clc
   254 30D2 A5 B2		    lda ZP_DST 
   255 30D4 69 1C		    adc #SPRITE_WIDTH
   256 30D6 85 B2		    sta ZP_DST 
   257 30D8 A5 B3		    lda ZP_DST + 1
   258 30DA 69 00		    adc #0
   259 30DC 85 B3		    sta ZP_DST + 1
   260
   261 30DE CA			    dex
   262 30DF D0 DA		    bne copy_sprite_row_loop
   263
   264 30E1 60			    rts 
   265 				.endp ;setup_vbxe_sprite_data
