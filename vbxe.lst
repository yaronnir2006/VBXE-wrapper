   165 3082			.proc setup_vbxe_palette
   166
   167 				    ; the sprite sheet data contains rgb color data as well
   168 				    ; this is reflected in the palette bin file
   169 				    ; copy the palette bin file data into VBXE rgb registers
   170 				    ; the rgb bin file contains 256 values for 
   171 				    ; r,g and b respectively, we copy all of them 
   172 				    ; start from palette 0 and color 0
   173 				    
   174 				    ; select palette 0
   175 3082 A0 45		    ldy #VBXE_PSEL
   176 3084 A9 00		    lda #0 
   177 3086 91 A0		    sta (VBXE_BASE_ADDR),y 
   178
   179 				    ; select color 0 
   180 3088 A0 44		    ldy #VBXE_CSEL
   181 308A A9 00		    lda #0 
   182 308C 91 A0		    sta (VBXE_BASE_ADDR),y 
   183
   184 				    ; loop all rgb values
   185 308E A2 00		    ldx #0
   186
   187 3090			loop_rgb
   188 				    ; red 
   189 3090 A0 46		    ldy #VBXE_CR
   190 3092 BD 86 3A		    lda	palette_bin,x 
   191 3095 91 A0		    sta (VBXE_BASE_ADDR),y 
   192 				    ; green 
   193 3097 A0 47		    ldy #VBXE_CG 
   194 3099 BD 86 3B		    lda palette_bin+$100,x 
   195 309C 91 A0		    sta (VBXE_BASE_ADDR),y 
   196 				    ; blue
   197 309E A0 48		    ldy #VBXE_CB 
   198 30A0 BD 86 3C		    lda palette_bin+$100+$100,x 
   199 30A3 91 A0		    sta (VBXE_BASE_ADDR),y 
   200 				    
   201 				    ; color selection (VBXE_CSEL) will increment automatically
   202 30A5 E8			    inx 
   203 30A6 D0 E8		    bne loop_rgb
   204 				    
   205 30A8 60			    rts 
   206 				.endp ;setup_vbxe_palette
