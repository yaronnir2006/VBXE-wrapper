   317 				;*********************************************************
   318 				; proc name:  setup_vbxe_blitter_block
   319 				; purpose:    you need to set before calling this proc
   320 				;             ZP_SRC and 3 bytes for VBXE_MEM_ADDR    
   321 				;             from the VBXE 3 bytes address 
   322 				;             we take the bank , and set it 
   323 				;             and we set the ZP_DST 
   324 				;             and the 3 bytes blitter address 
   325 				;*********************************************************
   326 30F9			.proc setup_vbxe_blitter_block
   327 				    ; source was set before the call to this proc
   328 				    ; set the destination 
   329 				    ; the VBXE address is with this format $00-F0-00
   330 				    ; we need to get the half part of the high byte
   331 				    ; and half part of the mid byte to select the proper
   332 				    ; VBXE bank  
   333 				    
   334 				    ; load mid byte 
   335 30F9 A5 A4		    lda VBXE_MEM_ADDR+1 
   336 				    ; store it temporary 
   337 30FB 85 B3		    sta ZP_TMP
   338 				    ; load high byte 
   339 30FD A5 A5		    lda VBXE_MEM_ADDR+2
   340 				    ; 4 shifts 4 rolls to get the half byte and half byte  
   341 30FF 06 B3		    asl ZP_TMP 
   342 3101 2A			    rol 
   343 3102 06 B3		    asl ZP_TMP 
   344 3104 2A			    rol 
   345 3105 06 B3		    asl ZP_TMP 
   346 3107 2A			    rol 
   347 3108 06 B3		    asl ZP_TMP 
   348 310A 2A			    rol 
   349
   350 				    ; select the bank for this address of VBXE
   351 				    ; restore current bank back 
   352 310B A0 5F		    ldy #VBXE_MEM_BANK_SEL
   353 				    ; acc holds the bank  
   354 310D 18			    clc 
   355 310E 69 80		    adc #MEMAC_GLOBAL_ENABLE
   356 3110 91 A0		    sta (VBXE_BASE_ADDR),y 
   357
   358 				    ; we need to add to the MEMAC-A window the offset 
   359 				    ; of the VBXE address 
   360 3112 A5 A3		    lda VBXE_MEM_ADDR
   361 3114 85 B2		    sta ZP_DST 
   362 3116 A5 A4		    lda VBXE_MEM_ADDR+1
   363 				    ; extrac the 3rd digit 
   364 3118 29 0F		    and #$0F 
   365 311A 09 90		    ora #>VBXE_MEMC_WINDOW
   366 311C 85 B3		    sta ZP_DST+1 
   367
   368 				    ; loop copy
   369 311E A0 14		    ldy #BCB_SIZE-1
   370
   371 3120			copy_loop
   372 3120 B1 B0		    lda (ZP_SRC),y
   373 3122 91 B2		    sta (ZP_DST),y
   374 3124 88			    dey
   375 3125 10 F9		    bpl copy_loop
   376 				    
   377 				    ; set the blitter address in VBXE memory address space
   378 				    ; $00F00E
   379 3127 A0 50		    ldy #VBXE_BL_ADR0 ; low byte
   380 3129 A5 A3		    lda VBXE_MEM_ADDR 
   381 312B 91 A0		    sta (VBXE_BASE_ADDR),y 
   382
   383 312D A0 51		    ldy #VBXE_BL_ADR1 ; mid byte
   384 312F A5 A4		    lda VBXE_MEM_ADDR+1   
   385 3131 91 A0		    sta (VBXE_BASE_ADDR),y 
